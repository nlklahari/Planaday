<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreatePlanFragment">

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnCancel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="50dp"
        android:text="Finish" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="50dp"
        android:text="Cancel" />

    <TextView
        android:id="@+id/tvStartTimeField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="258dp"
        android:text="Start Time"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvEndTimeField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="248dp"
        android:layout_marginTop="261dp"
        android:text="End Time"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvEnvironmentFieldIndoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="316dp"
        android:text="Indoor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvEnvironmentFieldOutdoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="280dp"
        android:layout_marginTop="313dp"
        android:text="Outdoor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvSettingField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="377dp"
        android:text="Setting"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvDateField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNameLabel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="99dp"
        android:text="Date"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/switchEnvironment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="178dp"
        android:layout_marginTop="313dp"
        android:textOff="Outdoor"
        android:textOn="Indoor"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etPlanName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/tvNameLabel"
        android:hint="Name your plan">

    </EditText><![CDATA[



    android:textSize="16sp" />













    ]]>

    <TextView
        android:id="@+id/tvNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="80dp"
        android:text="Plan Name" />

    <TextView
        android:id="@+id/tvAdvancedPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="106dp"
        android:layout_marginBottom="125dp"
        android:clickable="true"
        android:text="Advanced Preferences"
        android:textColor="#2196F3"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="258dp"
        android:background="@color/blush"
        android:src="@drawable/ic_baseline_access_time_24" />

    <TextView
        android:id="@+id/tvSelectedStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="261dp"
        android:layout_marginEnd="216dp"
        android:textAlignment="viewStart"
        tools:text="21:30" />

    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="207dp"
        android:textAlignment="viewStart"
        tools:text="06/21/21" />

    <TextView
        android:id="@+id/tvSelectedEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="266dp"
        android:layout_marginEnd="45dp"
        android:textAlignment="viewStart"
        tools:text="22:30" />


</RelativeLayout>