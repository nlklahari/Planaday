<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp" >

    <TextView
        android:id="@+id/tvEventName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        tools:text="Event #1" />

    <TextView
        android:id="@+id/tvPlanTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/tvEventName"
        android:textAlignment="center"
        android:textSize="16sp"
        tools:text="4:30pm - 9:30pm" />

    <TextView
        android:id="@+id/tvPlanDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPlanTime"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tvEventName"
        android:textAlignment="textEnd"
        android:textSize="16sp"
        tools:text="5 hrs" />

    <TextView
        android:id="@+id/tvPlanPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPlanTime"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tvPlanDuration"
        android:textAlignment="textEnd"
        android:textSize="16sp"
        tools:text="$100" />

    <TextView
        android:id="@+id/tvEventDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPlanTime"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/tvPlanPrice"
        android:textAlignment="textEnd"
        android:textSize="16sp"
        tools:text="200 mi" />

</RelativeLayout>